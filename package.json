{
  "name": "bakaai",
  "displayName": "BakaAI",
  "description": "cursor like code editor",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "bakaai.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "bakaai.askAI",
        "title": "Ask BakaAI"
      },
      {
        "command": "bakaai.openAISidebar",
        "title": "Open BakaAI Sidebar"
      }
    ],
    "keybindings": [
      {
        "command": "bakaai.askAI",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a"
      },
      {
        "command": "workbench.view.extension.bakaai-sidebar",
        "key": "ctrl+shift+l",
        "mac": "cmd+shift+l"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "bakaai-sidebar",
          "title": "BakaAI",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "views": {
      "bakaai-sidebar": [
        {
          "type": "webview",
          "id": "bakaai.sidebar",
          "name": "BakaAI Assistant",
          "when": "activeViewlet == 'workbench.view.extension.bakaai-sidebar'",
          "initialSize": 40
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "bakaai.sidebar",
        "contents": "Welcome to BakaAI Assistant"
      }
    ],
    "configuration": {
      "title": "BakaAI",
      "properties": {
        "bakaai.apiKey": {
          "type": "string",
          "default": "",
          "description": "DeepSeek API Key"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "@types/node": "^16.0.0"
  }
}
